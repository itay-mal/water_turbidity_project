<!--		</bsdf>-->
<!--        <medium type="homogeneous" name="interior">-->
<!--            <rgb name="sigmaS" value="$sigma_sr, $sigma_sg, $sigma_sb"/>-->
<!--	        <rgb name="sigmaA" value="$sigma_ar, $sigma_ag, $sigma_ab"/>-->
<!--        </medium>-->
<!--&lt;!&ndash;        <medium type="homogeneous" name="exterior">&ndash;&gt;-->
<!--&lt;!&ndash;            <rgb name="sigmaS" value="0.001, 0.001, 0.001"/>&ndash;&gt;-->
<!--&lt;!&ndash;	        <rgb name="sigmaA" value="0.001, 0.001, 0.001"/>&ndash;&gt;-->
<!--&lt;!&ndash;        </medium>&ndash;&gt;-->
