<scene version="3.0.0">
    <default name="spp" value="128"/>
    <default name="res" value="512"/>
    <default name="max_depth" value="6"/>
    <default name="integrator" value="volpath"/>

    <integrator type='$integrator'>
        <integer name="max_depth" value="$max_depth"/>
    </integrator>

    <sensor type="perspective" id="sensor">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="0.001"/>
        <float name="far_clip" value="100.0"/>
        <float name="focus_distance" value="1000"/>
        <float name="fov" value="39.3077"/>
        <transform name="to_world">
            <lookat origin="0,  0,  7"
                    target="0,  0,  0"
                    up    ="0,  1,  0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width"  value="$res"/>
            <integer name="height" value="$res"/>
            <rfilter type="tent"/>
            <string name="pixel_format" value="rgb"/>
            <string name="component_format" value="float32"/>
        </film>
    </sensor>

    <!-- BSDFs -->

    <bsdf type="diffuse" id="gray">
        <rgb name="reflectance" value="0.85, 0.85, 0.85"/>
    </bsdf>

    <bsdf type="diffuse" id="white">
        <rgb name="reflectance" value="0.885809, 0.698859, 0.666422"/>
    </bsdf>

    <bsdf type="diffuse" id="green">
        <rgb name="reflectance" value="0.105421, 0.37798, 0.076425"/>
    </bsdf>

    <bsdf type="diffuse" id="red">
        <rgb name="reflectance" value="0.570068, 0.0430135, 0.0443706"/>
    </bsdf>

    <bsdf type="roughconductor" id="roughmirror"/>

    <bsdf type="conductor" id="gold">
        <string name="material" value="Au"/>
    </bsdf>

    <bsdf type="conductor" id="aluminum">
        <string name="material" value="Al"/>
    </bsdf>

    <!-- Light -->

    <shape type="obj" id="light_middle">
        <string name="filename" value="meshes/cbox_luminaire.obj"/>
        <transform name="to_world">
            <translate x="0" y="-0.01" z="0"/>
        </transform>
        <ref id="white"/>
        <emitter type="area">
            <rgb name="radiance" value="18.387, 13.9873, 6.75357"/>
        </emitter>
    </shape>

    <shape type="obj" id="light_right">
        <string name="filename" value="meshes/cbox_luminaire.obj"/>
        <transform name="to_world">
            <translate x="2" y="-0.01" z="0"/>
        </transform>
        <ref id="white"/>
        <emitter type="area">
            <rgb name="radiance" value="18.387, 13.9873, 6.75357"/>
        </emitter>
    </shape>

    <shape type="obj" id="light_left">
        <string name="filename" value="meshes/cbox_luminaire.obj"/>
        <transform name="to_world">
            <translate x="-2" y="-0.01" z="0"/>
        </transform>
        <ref id="white"/>
        <emitter type="area">
            <rgb name="radiance" value="18.387, 13.9873, 6.75357"/>
        </emitter>
    </shape>

    <!-- Volumes -->

<!--    <medium type="heterogeneous" id="smoke_blue">-->
<!--		<string name="method" value="woodcock"/>-->
<!--		<float name="scale" value="1"/>-->
<!--		<volume name="density" type="gridvolume">-->
<!--			<string name="filename" value="smoke_water_dscaled12_2_blue.vol"/>-->
<!--		</volume>-->
<!--		<float name="scale" value="12.2"/>-->
<!--		<volume name="albedo" type="gridvolume">-->
<!--			<string name="filename" value="albedo_dscaled12_2_rgb.vol"/>-->
<!--		</volume>-->
<!--		<phase type="hg">-->
<!--			<float name="g" value="0.9"/>-->
<!--		</phase>-->
<!--	</medium>-->

    <medium type="homogeneous" id="free_space">
		<rgb name="albedo" value="0, 0, 0"/>
		<float name="sigma_t" value="1"/>
<!--		<rgb name="sigmaA" value="0.45, 0.06, 0.05"/>-->
		<phase type="hg">
			<float name="g" value="0.9"/>
		</phase>
	</medium>

    <medium type="homogeneous" id="underwater">
		<rgb name="sigma_t" value="0.3, 0.1, 0.1"/>
<!--		<rgb name="sigma_t" value="0.133, 0.1, 0.1"/>-->
<!--		<rgb name="sigmaA" value="0.45, 0.06, 0.05"/>-->
		<phase type="hg">
			<float name="g" value="0.9"/>
		</phase>
	</medium>

    <!-- Shapes -->

    <shape type="obj" id="aquarium">
		<string name="filename" value="bounds_large_wide_int_diff.obj"/>
		<transform name="to_world">
			<translate x="0" y="0" z="0"/>
			<scale x="4" y="2" z="2"/>
		</transform>
		<ref name="interior" id="underwater"/>
<!--		<ref name="exterior" id="free_space"/>-->
		<bsdf type="dielectric">
			<string name="int_ior" value="water"/>
			<string name="ext_ior" value="water"/>
		</bsdf>
	</shape>

    <shape type="obj" id="floor">
        <string name="filename" value="meshes/cbox_floor.obj"/>
        <transform name="to_world">
            <scale value="4,1,1"/>
        </transform>
        <ref id="white"/>
    </shape>

    <shape type="obj" id="ceiling">
        <string name="filename" value="meshes/cbox_ceiling.obj"/>
        <transform name="to_world">
            <scale value="4,1,1"/>
        </transform>
        <ref id="white"/>
    </shape>

    <shape type="obj" id="back">
        <string name="filename" value="meshes/cbox_back.obj"/>
        <transform name="to_world">
            <scale value="4,1,1"/>
        </transform>
        <ref id="white"/>
    </shape>

    <shape type="obj" id="behind-the_cam">
        <string name="filename" value="meshes/cbox_back.obj"/>
        <transform name="to_world">
            <scale value="4,1,1"/>
            <translate value="0,0,10"/>
        </transform>
        <ref id="green"/>
    </shape>

    <shape type="cube" id="mirrorcube">
        <transform name="to_world">
            <scale value="0.5"/>
            <translate x="-2" y="-0.5" z="0.2"/>
        </transform>
        <ref id="gold"/>
    </shape>

    <shape type="sphere" id="goldsphere">
        <transform name="to_world">
            <scale value="0.5"/>
            <translate x="0" y="-0.5" z="0.2"/>
        </transform>
        <ref id="gold"/>
    </shape>

    <shape type="sphere" id="alsphere">
        <transform name="to_world">
            <scale value="0.5"/>
            <translate x="1.5" y="-0.5" z="0.2"/>
        </transform>
        <ref id="aluminum"/>
    </shape>

</scene>
